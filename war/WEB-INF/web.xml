<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>mailboxServlet</servlet-name>
    <servlet-class>com.appspot.hommkmail.server.MailboxServiceImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>addMailServlet</servlet-name>
    <servlet-class>com.appspot.hommkmail.server.AddMailServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>singleMailServlet</servlet-name>
    <servlet-class>com.appspot.hommkmail.server.SingleMailServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>mailboxServlet</servlet-name>
    <url-pattern>/hommk_mail/mailbox</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>addMailServlet</servlet-name>
    <url-pattern>/hommk_mail/post</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>singleMailServlet</servlet-name>
    <url-pattern>/hommk_mail/mail</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Hommk_mail.html</welcome-file>
  </welcome-file-list>

</web-app>
